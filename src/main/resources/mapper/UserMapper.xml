<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.superliar.mapper.UserMapper">



    <!--businessSystem基础属性 -->
    <resultMap
            type="cn.superliar.po.TbUserEntity"
            id="businessSystemBaseProperty">
        <id column="user_id" property="id" />
        <result column="user_name" property="name" />
        <result column="user_pwd" property="pwd" />
        <result column="user_account" property="account" />
        <result column="user_created_by" property="createdBy" />
        <result column="user_updated_by" property="updatedBy" />
        <result column="user_created_date" property="createdDate" />
        <result column="user_updated_date" property="updatedDate" />
    </resultMap>

    <select id="listUser" resultMap="businessSystemBaseProperty">
        SELECT * FROM tb_user
    </select>

</mapper>